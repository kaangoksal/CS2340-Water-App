<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_welcome_page"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="gatech.water_app.controller.Controller.welcomePage"
    tools:showIn="@layout/activity_welcome_page">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/Login"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/Register"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="11dp"
            android:background="@android:drawable/presence_invisible"
            android:onClick="startLoginPage"
            android:text="Login" />

        <Button
            android:id="@+id/Register"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/Login"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/Login"
            android:layout_marginBottom="178dp"
            android:background="@android:drawable/presence_invisible"
            android:onClick="startRegistrationPage"
            android:text="Registration" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="388dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:visibility="visible"
            app:srcCompat="@drawable/login" />
    </RelativeLayout>

</LinearLayout>
