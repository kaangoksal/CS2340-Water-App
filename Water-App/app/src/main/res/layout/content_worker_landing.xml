<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    android:id="@+id/content_logout"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="gatech.water_app.controller.Controller.WorkerLandingPage"
    tools:showIn="@layout/activity_worker_landing">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="389dp"
        android:layout_height="571dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/workerlanding"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="-2dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="310dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="monospace"
        android:textAlignment="center"
        android:textColor="@color/ap_white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintLeft_toLeftOf="@+id/imageView5"
        app:layout_constraintRight_toRightOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5"
        tools:text="username" />

    <Button
        android:id="@+id/addReport"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="172dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView3"
        android:background="@color/ap_transparent"
        android:fontFamily="sans-serif-medium"
        android:onClick="addSourceReport"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView5"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/button3"
        android:layout_marginTop="50dp" />

    <Button
        android:id="@+id/button3"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="168dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/textView3"
        android:background="@color/ap_transparent"
        android:onClick="startEditPage"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/logout"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="45dp"
        android:background="@color/ap_transparent"
        android:onClick="logout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/waterButton" />

    <Button
        android:id="@+id/view_report_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="169dp"
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="50dp"
        android:background="@color/ap_transparent"
        android:onClick="startSourceView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/addPurity" />

    <Button
        android:id="@+id/waterButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="172dp"
        android:layout_height="37dp"
        android:layout_above="@+id/view_report_button"
        android:layout_alignStart="@+id/logout"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/ap_transparent"
        android:onClick="startWaterMap"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewPurity"
        android:layout_marginTop="50dp" />

    <Button
        android:id="@+id/viewPurity"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="173dp"
        android:layout_height="37dp"
        android:layout_alignStart="@+id/view_report_button"
        android:layout_alignTop="@+id/view_report_button"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/ap_transparent"
        android:onClick="startPurityView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_report_button"
        android:layout_marginTop="50dp" />

    <Button
        android:id="@+id/addPurity"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="173dp"
        android:layout_height="38dp"
        android:layout_alignEnd="@+id/addReport"
        android:layout_alignStart="@+id/addReport"
        android:layout_below="@+id/addReport"
        android:background="@color/ap_transparent"
        android:onClick="addPurityReport"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/addReport"
        android:layout_marginTop="45dp" />

</android.support.constraint.ConstraintLayout>
