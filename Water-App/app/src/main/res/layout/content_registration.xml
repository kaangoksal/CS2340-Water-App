<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="gatech.water_app.controller.Controller.Registration"
    tools:showIn="@layout/activity_registration">

    <TextView
        android:text="Registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RegistrationText"
        android:textSize="26sp"
        android:layout_marginTop="17dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/usernameIn"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/Username"
        android:layout_alignBottom="@+id/Username"
        android:layout_alignStart="@+id/RegistrationText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/emailIn"
        android:layout_alignBaseline="@+id/Email"
        android:layout_alignBottom="@+id/Email"
        android:layout_alignStart="@+id/passwordIn" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordIn"
        android:layout_alignBaseline="@+id/Password"
        android:layout_alignBottom="@+id/Password"
        android:layout_toEndOf="@+id/Password" />

    <TextView
        android:text="Password:   "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/Password"
        android:textSize="18sp"
        android:layout_below="@+id/usernameIn"
        android:layout_toStartOf="@+id/usernameIn" />

    <TextView
        android:text="Email:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/Email"
        android:textSize="18sp"
        android:layout_below="@+id/passwordIn"
        android:layout_alignStart="@+id/Password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/addressIn"
        android:layout_alignBaseline="@+id/Address"
        android:layout_alignBottom="@+id/Address"
        android:layout_alignStart="@+id/emailIn" />

    <TextView
        android:text="Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/Address"
        android:textSize="18sp"
        android:layout_below="@+id/emailIn"
        android:layout_alignStart="@+id/Email" />

    <TextView
        android:text="Username:   "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Username"
        android:layout_marginTop="79dp"
        android:textSize="18sp"
        android:layout_below="@+id/RegistrationText"
        android:layout_toStartOf="@+id/usernameIn" />

    <TextView
        android:text="Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Title"
        android:textSize="18sp"
        android:layout_above="@+id/usernameIn"
        android:layout_alignStart="@+id/Username"
        android:layout_marginBottom="23dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_alignTop="@+id/Title"
        android:layout_alignStart="@+id/usernameIn"
        android:layout_alignEnd="@+id/usernameIn" />

    <Button
        android:text="SUBMIT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/submitreg"
        android:layout_below="@+id/addressIn"
        android:layout_toEndOf="@+id/Title" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/submitreg"
        android:layout_alignEnd="@+id/addressIn"
        android:layout_marginEnd="49dp"
        android:id="@+id/cancel" />

</RelativeLayout>
