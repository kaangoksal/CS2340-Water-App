<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/content_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="gatech.water_app.controller.Controller.Registration"
    tools:showIn="@layout/activity_registration">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/registration"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/submitreg"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="74dp"
            tools:layout_editor_absoluteY="423dp"
            android:layout_alignBaseline="@+id/cancel"
            android:layout_alignBottom="@+id/cancel"
            android:layout_toStartOf="@+id/cancel"
            android:background="@color/ap_transparent"
            android:layout_marginEnd="60dp" />

        <Button
            android:id="@+id/cancel"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="73dp"
            tools:layout_editor_absoluteX="227dp"
            tools:layout_editor_absoluteY="423dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@color/ap_transparent"
            android:layout_marginBottom="97dp" />

        <EditText
            android:id="@+id/usernameIn"
            android:layout_width="254dp"
            android:layout_height="45dp"
            android:layout_marginBottom="20dp"
            android:background="@color/ap_transparent"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName"
            android:selectAllOnFocus="false"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="149dp"
            android:layout_above="@+id/passwordIn"
            android:textCursorDrawable="@null"
            android:layout_alignStart="@+id/passwordIn" />

        <EditText
            android:id="@+id/passwordIn"
            android:layout_width="253dp"
            android:layout_height="45dp"
            android:layout_marginBottom="15dp"
            android:background="@color/ap_transparent"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="217dp"
            android:layout_above="@+id/emailIn"
            android:textCursorDrawable="@null"
            android:layout_alignStart="@+id/emailIn" />

        <EditText
            android:id="@+id/emailIn"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginBottom="17dp"
            android:background="@color/ap_transparent"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="87dp"
            tools:layout_editor_absoluteY="282dp"
            android:textCursorDrawable="@null"
            android:layout_above="@+id/addressIn"
            android:layout_alignStart="@+id/addressIn" />

        <EditText
            android:id="@+id/addressIn"
            android:layout_width="253dp"
            android:layout_height="45dp"
            android:layout_marginBottom="39dp"
            android:background="@color/ap_transparent"
            android:ems="10"
            android:hint="Address"
            android:inputType="textPersonName"
            android:selectAllOnFocus="false"
            tools:layout_editor_absoluteX="87dp"
            tools:layout_editor_absoluteY="346dp"
            android:layout_marginEnd="23dp"
            android:textCursorDrawable="@null"
            android:layout_above="@+id/submitreg"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>


</LinearLayout>
